<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" >

        <TextView
            android:id="@+id/login_tv_createaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textSize="40sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="#669900" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_anon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proceed as Anonymous"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/login_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
        </LinearLayout>

        <EditText
            android:id="@+id/login_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:hint="Name" />

        <EditText
            android:id="@+id/login_birthyear"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:hint="Birth Year"
            android:inputType="number"
            android:maxLength="4" />

        <TextView
            android:id="@+id/login_education_header"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Education" />

        <Spinner
            android:id="@+id/login_education"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/login_experience_header"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outdoors Experience" />

        <Spinner
            android:id="@+id/login_experience"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/login_confidence_header"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confidence" />

        <Spinner
            android:id="@+id/login_confidence_plant"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/login_confidence_wavyleaf"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="right" />
        
    </LinearLayout>

</ScrollView>